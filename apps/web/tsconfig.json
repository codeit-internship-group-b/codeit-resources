{
  "extends": "@repo/typescript-config/nextjs.json",
  "include": [
    "svgr.d.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/types/src/*.ts"
  ],
  "exclude": ["node_modules", "out", ".next"],
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["../../packages/ui/*"],
      "@/public/*": ["./public/*"],
      "@repo/types/*": ["../../packages/types/src/*"]
    },
    "typeRoots": ["../packages/ui", "./node_modules/@types"]
  }
}
