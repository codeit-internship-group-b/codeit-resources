{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2023"],
    "outDir": "./dist",
    "rootDir": "../../",
    "paths": {
      "@repo/types/*": ["../../packages/types/src/*"]
    },
    "types": ["node"],
    "moduleResolution": "NodeNext"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "../../packages/types/src/*.ts"]
}
