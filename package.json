{
  "name": "codeit-resources",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint:fix": "turbo run lint -- --fix",
    "prepare": "husky install",
    "build:storybook": "turbo build-storybook --filter=storybook"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "eslint": "^8",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "prettier": "@org/prettier-config",
  "lint-staged": {
    "*.{tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
